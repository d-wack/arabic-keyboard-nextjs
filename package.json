{
  "name": "@d-wack/arabic-keyboard-nextjs",
  "version": "1.0.0",
  "description": "A full-featured Arabic keyboard component for Next.js and React applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/styles.css"
  },
  "keywords": [
    "arabic",
    "keyboard",
    "nextjs",
    "react",
    "typescript",
    "virtual-keyboard",
    "arabic-keyboard",
    "tashkeel",
    "diacritics",
    "rtl"
  ],
  "author": "d-wack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-wack/arabic-keyboard-nextjs"
  },
  "bugs": {
    "url": "https://github.com/d-wack/arabic-keyboard-nextjs/issues"
  },
  "homepage": "https://github.com/d-wack/arabic-keyboard-nextjs#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:package": "tsc --project tsconfig.build.json && cp src/app/globals.css dist/styles.css",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run test && npm run build:package"
  },
  "dependencies": {
    "next": "16.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
